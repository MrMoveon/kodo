{
	"restartable": "rs",
	"ignore": [
		".git",
		"node_modules/**/node_modules",
		"test/",
		"bin/",
		"doc/"
	],
	"verbose": true,
	"execMap": {
		"js": "node --harmony"
	},
	"env": {
		"NODE_ENV": "development"
	},
	"events": {
		"restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
	},
	"watch": [
		"src/",
		"examples/"
	],
	"ext": "js json",
	"colous": true
}
